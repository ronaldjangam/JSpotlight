# Environment Variables for JSpotlight

# JWT Configuration
JWT_SECRET=JSpotlightSecretKeyForJWTTokenGenerationPleaseChangeInProduction

# Database Configuration (for production)
# DB_URL=jdbc:postgresql://localhost:5432/jspotlight
# DB_USERNAME=jspotlight_user
# DB_PASSWORD=secure_password

# AI Service Configuration
AI_SERVICE_URL=http://localhost:5000/predict

# File Upload Configuration
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=10MB

# Server Configuration
SERVER_PORT=8080

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging Level
LOG_LEVEL=INFO
